<style type="text/css">
div label input {
   margin-right:100px;
}
body {
    font-family:sans-serif;
}

#ck-button {
    margin:4px;
    background-color:#EFEFEF;
    border-radius:4px;
    border:1px solid #D0D0D0;
    overflow:auto;
    float:left;
}

#ck-button:hover {
    background:red;
}

#ck-button label {
    float:left;
    width:4.0em;
}

#ck-button label span {
    text-align:center;
    padding:3px 0px;
    display:block;
}

#ck-button label input {
    position:absolute;
    top:-20px;
}

#ck-button input:checked + span {
    background-color:#911;
    color:#fff;
}
</style>

<h2>This is where you'd choose your brand's audience</h2>
<p>Whom are you trying to reach?</p>

<% @audience_arr.each do |aud| %>
<div id="ck-button">
  <%= check_box_tag 'audience', aud %>
  <%= label 'audience', aud, aud %><span>red</span><br>
</div>
<% end %>

